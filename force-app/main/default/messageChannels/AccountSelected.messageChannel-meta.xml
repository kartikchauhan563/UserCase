<?xml version="1.0" encoding="UTF-8"?>
<LightningMessageChannel xmlns="http://soap.sforce.com/2006/04/metadata">
    <description>Message channel for when a new contact is created</description>
    <isExposed>true</isExposed>
    <lightningMessageFields>
        <description>The record ID of the contact that was created</description>
        <fieldName>Id</fieldName>
    </lightningMessageFields>
    <lightningMessageFields>
        <description>The API name of the contact object</description>
        <fieldName>Object_API_Name__c</fieldName>
    </lightningMessageFields>
    <lightningMessageFields>
        <description>The first name of the contact that was created</description>
        <fieldName>FirstName</fieldName>
    </lightningMessageFields>
    <lightningMessageFields>
        <description>The last name of the contact that was created</description>
        <fieldName>LastName</fieldName>
    </lightningMessageFields>
    <lightningMessageFields>
        <description>The lead source of the contact that was created</description>
        <fieldName>LeadSource</fieldName>
    </lightningMessageFields>
    <masterLabel>AccountSelected</masterLabel>
</LightningMessageChannel>
